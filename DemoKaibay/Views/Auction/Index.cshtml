@using DemoKaibay.Controllers
@model DemoKaibay.Dtos.AuctionDetailsDto

@{
    ViewData["Title"] = "Index";
}

<div>
    <h1>@Model.Title</h1>
    @if(Model.IsEnded)
    {
         <div class="alert alert-danger" role="alert">
            The Auction was ended at @Model.AuctionEnded
         </div>
    }
   
    <div>
        @if(Model.ImageUrl != null)
        {
            <img src="@Model.ImageUrl" width="600" height="200"/>
        }
        else
        {
            <img src="https://files.123freevectors.com/wp-content/original/110798-dark-color-blurred-background-vector.jpg" width="600" height="200"/>
        }
    </div>


    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.InitialPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.InitialPrice) €
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CurrentPrice)
        </dt>
        <p class = "col-sm-10" id="price-@Model.Id">
            @Model.CurrentPrice
        </p>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FinalPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FinalPrice) €
        </dd>

    </dl>
</div>

<h2> Proposition </h2>
<div>
    <label for="say">Price</label>
    <input id="price" >
    <input type="button" id="sendButton" value="Send Bid" />
</div>

<script src="~/js/kaibay.js" asp-append-version="true"></script>
